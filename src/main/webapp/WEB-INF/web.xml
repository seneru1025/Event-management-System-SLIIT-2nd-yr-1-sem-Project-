<?xml version="1.0" encoding="UTF-8"?>


<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         <servlet>
			<servlet-name>register</servlet-name>
			<servlet-class>com.EventManagementSystem.RegistrationServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>register</servlet-name>
			<url-pattern>/register</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>login</servlet-name>
			<servlet-class>com.EventManagementSystem.LoginServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>login</servlet-name>
			<url-pattern>/login</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>profile</servlet-name>
			<servlet-class>com.EventManagementSystem.ProfileServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>profile</servlet-name>
			<url-pattern>/profile</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>editprofile</servlet-name>
			<servlet-class>com.EventManagementSystem.EditProfileServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>editprofile</servlet-name>
			<url-pattern>/editprofile</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>updateprofile</servlet-name>
			<servlet-class>com.EventManagementSystem.UpdateProfileServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>updateprofile</servlet-name>
			<url-pattern>/updateprofile</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>deleteprofile</servlet-name>
			<servlet-class>com.EventManagementSystem.DeleteProfileServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>deleteprofile</servlet-name>
			<url-pattern>/deleteprofile</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>createevent</servlet-name>
			<servlet-class>com.EventManagementSystem.CreateEventServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>createevent</servlet-name>
			<url-pattern>/createevent</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>events</servlet-name>
			<servlet-class>com.EventManagementSystem.EventsServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>events</servlet-name>
			<url-pattern>/events</url-pattern>
		</servlet-mapping>
         
</web-app>